{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "+infra": ["./infra/index"],
      "+infra/*": ["./infra/*"],
      "+notifier": ["./modules/notifier/index"],
      "+notifier/*": ["./modules/notifier/*"],
      "+app": ["./app/index"],
      "+app/*": ["./app/*"]
    }
  },
  "exclude": ["bgord-scripts"]
}
